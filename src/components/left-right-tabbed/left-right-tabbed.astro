---
import type { ImageMetadata } from "astro";
import { Image, Picture } from "astro:assets";
import Markdown from "../utility/markdown.astro";

interface Props {
  background_color: string;
  tab_heading_inactive_color: string;
  tab_text_color: string;
  flipped: boolean;
  heading: {
    heading_text: string;
    text_color: string;
  };
  tabs: [
    {
      tab_heading: string;
      text_content: string;
    },
  ];
  image: {
    image_path: string;
    alt_text: string;
  };
}

const {
  image,
  background_color,
  tab_heading_inactive_color,
  tab_text_color,
  heading,
  tabs,
  flipped,
} = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/**/*.{jpeg,jpg,png,gif,svg}",
  { eager: true }
);

const imageSrc = images[image.image_path]?.default ?? image.image_path;
---

<div class="left-right-tabbed" style={`background-color: ${background_color};`}>
  {
    flipped ? (
      <div class="left-right-tabbed-wrapper">
        <h2 style={`color: ${heading.text_color};`}>{heading.heading_text}</h2>
        <div class="left-right-tabbed-content">
          <Picture
            pictureAttributes={{
              class: "left-right-tabbed-image",
            }}
            alt={image.alt_text}
            src={imageSrc}
            widths={[600, 800, 1200]}
            sizes="100vw"
            loading="eager"
            formats={["avif", "webp"]}
          />

          <spicy-sections class="spicy-sections">
            {tabs?.map((tab) => {
              return (
                <>
                  <h3 style={`color: ${tab_heading_inactive_color};`}>
                    {tab.tab_heading}
                  </h3>
                  <div>
                    <Markdown content={tab.text_content} />
                  </div>
                </>
              );
            })}
          </spicy-sections>
        </div>
      </div>
    ) : (
      "TODO: Put another one here flipped"
    )
  }
</div>

<style define:vars={{ tab_text_color }}>
  .left-right-tabbed-wrapper {
    max-width: var(--pageContainer);
    padding-inline: var(--pagePadding);
    margin: 0 auto;
    padding-block: 70px;
    display: flex;
    flex-direction: column;
    position: relative;
  }
  .left-right-tabbed-wrapper h2 {
    font-size: 1.5rem;
    position: absolute;
    top: calc(70px + 16px);
    left: calc(var(--pagePadding) + 16px);
    color: white !important;
  }
  .left-right-tabbed-content {
    display: flex;
    flex-direction: column;
    gap: 17px;
  }

  .left-right-tabbed-image {
    width: 100%;
    max-height: 70vh;
  }
  .left-right-tabbed-image img {
    max-width: 816px;
    height: 100%;
    object-fit: cover;
    aspect-ratio: 1 / 1.25;
    border-radius: 40px;
  }
  .left-right-tabbed spicy-sections {
    --const-mq-affordances: [screen and (min-width: 0px)] tab-bar;
    width: 100%;
  }
  .left-right-tabbed spicy-sections h3 {
    margin-right: 8px;
    margin-bottom: 27px;
    font-size: 1.25;
    overflow: wrap;
  }
  .left-right-tabbed spicy-sections::part(tab-list) {
    overflow-x: scroll;
    column-gap: 40px;
    flex-wrap: wrap;
  }
  .left-right-tabbed spicy-sections h3[aria-selected="true"] {
    color: var(--tab_text_color) !important;
  }
  @media only screen and (min-width: 600px) {
    .left-right-tabbed-wrapper {
      padding-block: 140px;
    }
    .left-right-tabbed-wrapper h2 {
      font-size: 2rem;
      position: static;
      color: inherit !important;
    }
    .left-right-tabbed-content {
      flex-direction: row;
    }
    .left-right-tabbed-image {
      max-width: 816px;
      min-width: 50%;
      height: 100%;
      max-height: none;
    }
    spicy-sections {
      flex-direction: column;
    }
    spicy-sections h3 {
      font-size: 1.5;
      margin-right: 40px;
      margin-bottom: 54px;
    }
  }
</style>
